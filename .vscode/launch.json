{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--reporter",
                "spec",
                "--full-trace",
                "${workspaceRoot}/dist/tests/index.js"
            ],
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "preLaunchTask": "tsc",
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "stopOnEntry": false,
            "protocol": "inspector"
        }
    ]
}
